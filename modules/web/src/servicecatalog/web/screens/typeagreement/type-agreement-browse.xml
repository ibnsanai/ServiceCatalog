<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="typeAgreementsTable"
        messagesPack="servicecatalog.web.screens.typeagreement">
    <data readOnly="true">
        <collection id="typeAgreementsDc"
                    class="servicecatalog.entity.TypeAgreement"
                    view="_local">
            <loader id="typeAgreementsDl">
                <query>
                    <![CDATA[select e from srvcat_TypeAgreement e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="typeAgreementsTable"
            spacing="true">
        <filter id="filter"
                applyTo="typeAgreementsTable"
                dataLoader="typeAgreementsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="typeAgreementsTable"
                    width="100%"
                    dataContainer="typeAgreementsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="liabilityOwner"/>
                <column id="liabilityOrg"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="typeAgreementsTable.create"/>
                <button id="editBtn" action="typeAgreementsTable.edit"/>
                <button id="removeBtn" action="typeAgreementsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
