<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="servicecatalog.web.screens.servicerequest">
    <data>
        <instance id="serviceRequestDc"
                  class="servicecatalog.entity.ServiceRequest"
                  view="serviceRequest-edit">
            <loader/>
            <collection id="teamDc" property="team"/>
            <collection id="agreementDc" property="agreement"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="serviceRequestDc">
                <column width="250px">
                    <textField id="titleField" property="title"/>
                    <textField id="briefDescField" property="briefDesc"/>
                    <textField id="fullDescField" property="fullDesc"/>
                    <textField id="docsURLField" property="docsURL"/>
                    <textField id="ownerField" property="owner"/>
                    <lookupField id="formatField" property="format"/>
                    <textField id="stakeHolderField" property="stakeHolder"/>
                    <lookupField id="statusField" property="status"/>
                    <lookupField id="requestStatusField" property="requestStatus"/>
                </column>
            </form>
            <groupBox id="teamBox" caption="msg://servicecatalog.entity/ServiceRequest.team">
                <table id="teamTable" dataContainer="teamDc" width="100%" height="200px">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="participant"/>
                    </columns>
                    <buttonsPanel>
                        <button action="teamTable.create"/>
                        <button action="teamTable.edit"/>
                        <button action="teamTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
            <groupBox id="agreementBox" caption="msg://servicecatalog.entity/ServiceRequest.agreement">
                <table id="agreementTable" dataContainer="agreementDc" width="100%" height="200px">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="liabilityOwner"/>
                        <column id="liabilityOrg"/>
                    </columns>
                    <buttonsPanel>
                        <button action="agreementTable.create"/>
                        <button action="agreementTable.edit"/>
                        <button action="agreementTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
