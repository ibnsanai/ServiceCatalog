<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="serviceRequestsTable"
        messagesPack="servicecatalog.web.screens.servicerequest">
    <data readOnly="true">
        <collection id="serviceRequestsDc"
                    class="servicecatalog.entity.ServiceRequest"
                    view="serviceRequest-view">
            <loader id="serviceRequestsDl">
                <query>
                    <![CDATA[select e from srvcat_ServiceRequest e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="serviceRequestsTable"
            spacing="true">
        <filter id="filter"
                applyTo="serviceRequestsTable"
                dataLoader="serviceRequestsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="serviceRequestsTable"
                    width="100%"
                    dataContainer="serviceRequestsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="title"/>
                <column id="briefDesc"/>
                <column id="requestStatus"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="serviceRequestsTable.create"/>
                <button id="editBtn" action="serviceRequestsTable.edit"/>
                <button id="removeBtn" action="serviceRequestsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
